%include ~/.config/hg/hgrc.local

[extensions]
amend = 
censor = 
color =
convert = 
extdiff =
gpg = 
hgext.bookmarks =
# hggit =
histedit = 
# largefiles = 
mq = 
pager =
progress =
purge =
rebase =
shelve =
show = 
sparse = 
strip =
uncommit = 

[alias]
cm = !${HG} commit -m "Scal z $(${HG} parents | grep 'branch:' | sed 's/branch:\s*//')"
b = branch

[color]
mode = auto

color.orange=202
color.lightyellow=191
color.darkorange=220
color.brightyellow=226

log.branch=cyan
log.summary=lightyellow
log.description=lightyellow
log.bookmark=green
log.tag=darkorange
log.activebookmark = green bold underline

changeset.public=orange bold
changeset.secret=blue bold
changeset.draft=brightyellow bold

desc.here=bold blue_background

[diff]
git = true
nobinary = false

[extdiff]
cmd.vimdir = nvim
opts.vimdir = -f '+next' '+execute "DirDiff" argv(0) argv(1)'

cmd.icdiff = icdiff
opts.icdiff = --recursive

[ui]
editor = nvim
ignore = ~/.hgignore
merge = kdiff3
ssh = ssh -C

[pager]
pager = LESS='FR' less
attend = icdiff,diff,status,log

[tortoisehg]
vdiff = kdiff3
