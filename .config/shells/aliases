if command -v delta > /dev/null; then
    if [[ "${TERM_BG_BRIGHT}" -ne 1 ]]; then
        alias delta='delta --plus-color="#274916" --minus-color="#5e1b1b"'
        export GIT_PAGER='delta --theme "ansi-dark" --plus-color="#274916" --minus-color="#5e1b1b"'
    fi
fi
