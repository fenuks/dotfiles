%include ~/.hgrc.local
[extensions]
amend = 
censor = 
color =
convert = 
extdiff =
gpg = 
hgext.bookmarks =
hggit =
histedit = 
largefiles = 
mq = 
pager =
progress =
purge =
rebase =
shelve =
show = 
sparse = 
strip =
uncommit = 

[extdiff]
cmd.vimdir = nvim
opts.vimdir = -f '+next' '+execute "DirDiff" argv(0) argv(1)'

cmd.icdiff = icdiff
opts.icdiff = --recursive

[ui]
editor = nvim
ignore = ~/.hgignore
merge = kdiff3
ssh = ssh -C

[pager]
pager = LESS='FR' less
attend = icdiff,diff,status,log

[tortoisehg]
vdiff = kdiff3
